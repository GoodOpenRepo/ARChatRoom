<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_85">

    <RelativeLayout
        android:id="@+id/rl_tourist"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:layout_centerHorizontal="true">

        <org.ar.audioganme.weight.SpreadView
            android:id="@+id/tourist_anim"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_centerInParent="true"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/tourist_head"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            android:background="@drawable/shape_circle_bg"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/tourist_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/join_mic"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tourist_mute"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_alignEnd="@id/tourist_head"
            android:layout_alignBottom="@id/tourist_head"
            android:src="@drawable/mic_close_samall" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sp_15"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tourist_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sp_15"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/white"
            android:text="1号麦位"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/tourist_sex"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:src="@drawable/man"
            android:layout_gravity="center"/>
    </LinearLayout>


</RelativeLayout>